{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "pages/index.jsx",
    "pages/collection/[category].jsxjsxjsx",
    "pages/checkout/thanks.jsx",
    "pages/checkout/[id].jsx",
    "pages/customer/orders.jsx",
    "pages/customer/favorites.jsx",
    "pages/customer/[id].jsx",
    "pages/returns.jsx",
    "pages/products.jsx",
    "pages/measurements.jsx",
    "pages/contact.jsx",
    "components/reviews/carousel/MobileCarousel.jsx",
    "components/reviews/carousel/MobileGallery.jsx",
    "components/auth/AuthContent.jsx"
  ],
  "exclude": ["node_modules"]
}
